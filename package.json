{
  "name": "angular2-infinite-scroll",
  "version": "0.1.2",
  "description": "An infinite scroll directive for angular2",
  "main": "angular2-infinite-scroll.js",
  "typings": "./angular2-infinite-scroll.d.ts",
  "repository": "orizens/angular2-infinite-scroll",
  "scripts": {
    "start": "npm run build && npm run lite",
    "lite": "lite-server",
    "prepublish": "tsc & node make.js",
    "copy:src": "cp ./src/{scroller.ts,infinite-scroll.ts,infinite-scroll.spec.ts} .tmp/",
    "copy:config": "cp ./tests/tsconfig.json .tmp/",
    "copy": "npm run copy:src & npm run copy:config",
    "build:test": "tsc --project ./.tmp",
    "postinstall": "typings install",
    "clean": "rimraf .tmp/",
    "watch": "tsc --watch",
    "prepare:test": "npm run clean && mkdir .tmp",
    "pre:test": "npm run copy && npm run build:test",
    "test": "karma start karma.conf.js",
    "bdd": "npm run prepare:test && npm run pre:test"
  },
  "keywords": [
    "angular2",
    "scroll",
    "infinite"
  ],
  "author": "Oren Farhi",
  "license": "MIT",
  "devDependencies": {
    "@angular/common": "2.0.0-rc.1",
    "@angular/compiler": "2.0.0-rc.1",
    "@angular/core": "^2.0.0-rc.1",
    "@angular/platform-browser": "2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "2.0.0-rc.1",
    "autodts": "0.0.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "jasmine-core": "2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "lite-server": "2.2.0",
    "path": "^0.12.7",
    "reflect-metadata": "0.1.2",
    "rimraf": "2.5.2",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.31",
    "systemjs-builder": "^0.15.16",
    "typescript": "^1.7.5",
    "typings": "1.2.0",
    "zone.js": "0.6.12"
  }
}
